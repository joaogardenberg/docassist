<h2><%= t('devise.sessions.log_in_title').html_safe %></h2>

<div id="error_explanation">
  <em>Usu√°rio: johnny / Senha: johnny</em>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-field">
    <%= f.text_field :login, autofocus: true %>
    <%= f.label :login, t('devise.sessions.login_label').html_safe %><br />
  </div>

  <div class="input-field">
    <%= f.password_field :password, autocomplete: "new-password" %>
    <%= f.label :password, t('devise.sessions.password_label').html_safe %><br />
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="input-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('devise.sessions.remember_me_label').html_safe %>
    </div>
  <% end -%>

  <div class="input-field actions">
    <%= f.submit t('devise.sessions.submit_label').html_safe, class: 'btn bg-info' %>
  </div>
<% end %>

<div class="links">
  <%= render "devise/shared/links" %>
</div>
