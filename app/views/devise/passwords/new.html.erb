<h2><%= t('devise.passwords.forgot_password_title').html_safe %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= f.label :email, t('devise.passwords.email_label').html_safe %><br />
  </div>

  <div class="input-field actions">
    <%= f.submit t('devise.passwords.new_submit_label').html_safe, class: 'btn bg-info' %>
  </div>
<% end %>

<div class="links">
  <%= render "devise/shared/links" %>
</div>
