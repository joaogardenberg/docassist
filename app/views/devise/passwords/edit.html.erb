<h2><%= t('devise.passwords.change_password_title').html_safe %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="input-field">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    <%= f.label :password do %>
      <%= t('devise.passwords.new_password_label').html_safe %>
      <% if @minimum_password_length %>
        (<%= t('devise.passwords.minimum_length', minimum_length: @minimum_password_length).html_safe %>)
      <% end %>
    <% end %>
  </div>

  <div class="input-field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <%= f.label :password_confirmation, t('devise.passwords.confirm_password_label').html_safe %><br />
  </div>

  <div class="input-field actions">
    <%= f.submit t('devise.passwords.edit_submit_label').html_safe, class: 'btn bg-info' %>
  </div>
<% end %>

<div class="links">
  <%= render "devise/shared/links" %>
</div>
