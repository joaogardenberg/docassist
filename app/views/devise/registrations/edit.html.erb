<h2><%= t('devise.registrations.edit_title', name: resource_name.to_s.humanize).html_safe %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, t('devise.registrations.email_label').html_safe %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('devise.registrations.pending_confirmation', email: resource.unconfirmed_email).html_safe %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, t('devise.registrations.password_label').html_safe %> <i>(<%= t('devise.registrations.no_password_change').html_safe %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.registrations.minimum_length', minimum_length: @minimum_password_length).html_safe %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('devise.registrations.confirm_password_label').html_safe %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, t('devise.registrations.current_password_label').html_safe %> <i>(<%= t('devise.registrations.current_password_text').html_safe %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit_submit_label').html_safe %>
  </div>
<% end %>

<h3><%= t('devise.registrations.destroy_user_title').html_safe %></h3>

<p><%= t('devise.registrations.unhappy').html_safe %> <%= button_to t('devise.registrations.destroy_user_button_label').html_safe, registration_path(resource_name), data: { confirm: t('devise.registrations.confirm_destruction').html_safe }, method: :delete %></p>

<%= link_to t('devise.registrations.back_button_label').html_safe, :back %>
