<h2><%= t('devise.sessions.log_in_title') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t('devise.sessions.email_label') %><br />
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.sessions.password_label') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('devise.sessions.remember_me_label') %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t('devise.sessions.submit_label') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
